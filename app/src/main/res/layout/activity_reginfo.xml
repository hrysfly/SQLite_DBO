<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".REGinfo">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="注册"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="30dp"/>
    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tv_com_1"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintBottom_toBottomOf="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_com_2"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/tv_com_1"
        app:layout_constraintTop_toBottomOf="@id/tv_com_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录密码："
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_com_3"

        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/tv_com_2"
        app:layout_constraintTop_toBottomOf="@id/tv_com_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码："
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_com_4"

        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/tv_com_3"
        app:layout_constraintTop_toBottomOf="@id/tv_com_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_com_5"

        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="@id/tv_com_4"
        app:layout_constraintTop_toBottomOf="@id/tv_com_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身份证："
        android:textSize="20sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>