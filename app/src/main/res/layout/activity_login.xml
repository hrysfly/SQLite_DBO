<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/iv_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="用户名："
        app:layout_constraintTop_toBottomOf="@id/iv_hp"
        app:layout_constraintRight_toLeftOf="@id/iv_hp"
        android:layout_marginTop="50dp"
        tools:layout_editor_absoluteY="250dp"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/et_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="请输入用户名"
        app:layout_constraintLeft_toRightOf="@id/tv_username"
        app:layout_constraintBottom_toBottomOf="@id/tv_username"
        android:background="@drawable/edbackground"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_passwords"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="密码："
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        app:layout_constraintRight_toRightOf="@id/tv_username"
        android:textSize="30sp"
        />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_passwords"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="请输入密码"
        app:layout_constraintLeft_toRightOf="@id/tv_passwords"
        app:layout_constraintBottom_toBottomOf="@id/tv_passwords"
        android:background="@drawable/edbackground"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="0"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintRight_toRightOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_bias="0.6"
        android:text="登录"
        android:textSize="20sp"
        android:background="@drawable/login_button_bg"/>
    <Button
        android:id="@+id/btn_reg"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/btn_login"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:text="注册"
        android:textSize="20sp"
        android:background="@drawable/login_button_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>